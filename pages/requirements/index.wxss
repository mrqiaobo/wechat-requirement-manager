/* pages/requirements/index.wxss */
page {
  height: 100%;
}
.container {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: start;
  padding:0rpx 20rpx;
}
.function {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 0 50rpx;
}

.function text {
  font-size: 50rpx;
  font-weight: bold;
  margin-left: 30rpx;
}

.addButton{
  color: white;
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  background-color: lightblue;
  margin:0;
  margin-right: 30rpx;
}

.requirement-list {
  width: 100%;
  margin-top: 50rpx;
  height: 1000rpx;
}

.requirement-item, .table-header {
  display: flex;
  padding: 10rpx;
  border-bottom: lightblue 1px solid;
}

.requirement-item view {
  flex-grow: 1;
  min-width: 50rpx;
  font-size: 26rpx;
  padding-right: 20rpx;
}

.table-header text {
  flex-grow: 1;
  font-size: 26rpx;
  font-weight: bold;
  padding-right: 20rpx;
}

.title {
  width: 150rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;

}

.deadline {
  width: 120rpx;
}
.priority {
  width: 50rpx;
}

.proposer .avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 30rpx;
}

.buttonView {
  width: 100%;
  position:absolute ;
  bottom: 0rpx;
  padding: 0 20rpx;
}
