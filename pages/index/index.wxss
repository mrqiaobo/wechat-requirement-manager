/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #ccc;
}

.usermotto {
  padding: 1rem;
  margin-top: 20px;
  display: flex;
  margin: auto;
}

.user-motto-text {
  font-size: 14px;
}

.start-button {
  position: absolute;
  bottom: 30px;
  width: 100%;
  background-color: lightblue;
  color: #fff;
}
.menu-container {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.menu-container view {
  flex-grow: 1;
}

.menu-container view button {
  width: 200rpx;
  height: 200rpx;
  background-color: lightblue;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
} 